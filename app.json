{
  "name": "Public Telegram Upload Forwarder",
  "description": "Public temporary upload server that forwards files to a Telegram log group.",
  "repository": "https://github.com/Oxeigns/Tunnel",
  "keywords": ["flask", "pyrogram", "telegram", "upload", "heroku"],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram bot token from BotFather",
      "required": true
    },
    "API_ID": {
      "description": "Telegram API ID from my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API hash from my.telegram.org",
      "required": true
    },
    "LOG_GROUP_ID": {
      "description": "Target Telegram log group ID (e.g. -100xxxxxxxxxx)",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
